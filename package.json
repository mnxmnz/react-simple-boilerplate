{
  "name": "react-simple-boilerplate",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnxmnz/React-Simple-Boilerplate"
  },
  "engines": {
    "node": "18"
  },
  "private": true,
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "yarn lint:eslint",
      "yarn lint:prettier"
    ],
    "src/**/*.ts": [
      "yarn lint:stylelint"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "prepare": "husky install",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --fix \"./**/*.{js,ts,tsx}\" --ignore-path .gitignore",
    "lint:prettier": "prettier --write \"./**/*.{js,ts,tsx}\" --ignore-path .gitignore",
    "lint:stylelint": "stylelint --fix \"./**/*.ts\" --ignore-path .gitignore"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "axios": "^1.6.0",
    "emotion-normalize": "^11.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/node": "^16.18.26",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "8.4.23",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.8",
    "react-scripts": "5.0.1",
    "stylelint": "^15.10.1",
    "stylelint-config-concentric-order": "^5.1.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^4.9.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
